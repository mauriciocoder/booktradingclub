<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Book Trading Club</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="css/style.css" rel="stylesheet">
</head>
<body>
<header>
    <!--Navbar-->
    <nav class="navbar navbar-dark primary-color-dark navbar-fixed-top">
        <!-- Collapse button-->
        <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx2">
            <i class="fa fa-bars"></i>
        </button>
        <div class="container">
            <!--Collapse content-->
            <div class="collapse navbar-toggleable-xs" id="collapseEx2">
                <!--Navbar Brand-->
                <a class="navbar-brand" href="/">BookTradingClub</a>
                {{#authenticated}}
                <!--Links-->
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Your Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/trades">Trades</a>
                    </li>
                </ul>
                {{/authenticated}}
                {{^authenticated}}
                <!--Signup-->
                <ul class="nav navbar-nav nav-flex-icons">
                    <li class="nav-item">
                        <a class="nav-link" href="/register">SignUp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
                {{/authenticated}}
                {{#authenticated}}
                <!--User Login-->
                <ul class="nav navbar-nav nav-flex-icons">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle waves-effect waves-light primary-color-dark" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="fa fa-user"></i></a>
                        <div class="dropdown-menu dropdown-secondary" aria-labelledby="dropdownMenu1" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                            <a class="dropdown-item waves-effect waves-light" href="/profile">Profile</a>
                            <a class="dropdown-item waves-effect waves-light" href="/logout">Sign Out</a>
                        </div>
                    </li>
                </ul>
                {{/authenticated}}
            </div>
        </div>
    </nav>
</header>
<main class="p-t-6">
    <!--Main layout-->
    <div class="container">
        {{#message}}
        <!--Message row-->
        <div class="row">
            <div class="col-md-12">
                <p class="text-xs-center" style="color:#CC0000">{{message}}</p>
            </div>
        </div>
        {{/message}}
        <!--Your Offers Row-->
        <div class="row">
            <div class="col-md-12">
                <h2 class="h2-responsive text-xs-center">Your Offers</h2>
            </div>
        </div>
        <!--Your Offers Table-->
        <div class="row">
            <div class="col-md-12">  
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Desired Book</th>
                            <th>Book Owner</th>
                            <th>Your Book</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#yourOffers}}
                        <tr>
                            <td><a href="/book/{{desiredBook._id}}">{{desiredBook.title}}</a></td>
                            <td>{{desiredBook.owner}}</td>
                            <td>{{title}}</td>
                            <td>{{trade.status}}</td>
                            <td>
                                {{#isPending}}
                                    <a href="/trades/cancel/{{trade._id}}">Cancel</a>
                                {{/isPending}}
                            </td>
                        </tr>
                        {{/yourOffers}}
                    </tbody>
                </table>
            </div>
        </div>
        <br/>
        <!--Offered You Row-->
        <div class="row">
            <div class="col-md-12">
                <h2 class="h2-responsive text-xs-center">Offered You</h2>
            </div>
        </div>
        <!--Offered You Table-->
        <div class="row">
            <div class="col-md-12">  
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Offered Book</th>
                            <th>Book Owner</th>
                            <th>Your Book</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#offeredYou}}
                        <tr>
                            <td><a href="/book/{{offeredBook._id}}">{{offeredBook.title}}</a></td>
                            <td>{{offeredBook.owner}}</td>
                            <td>{{title}}</td>
                            <td>{{trade.status}}</td>
                            <td>
                                {{#isPending}}
                                    <a href="/trades/accept/{{trade._id}}">Accept</a>&nbsp;<a href="/trades/reject/{{trade._id}}">Reject</a>
                                {{/isPending}}
                            </td>
                        </tr>
                        {{/offeredYou}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>    
</main>
<!--Footer-->
<footer class="page-footer primary-color-dark text-xs-center">
    <div class="container-fluid">Â©2016 Bonetti, Mauricio</div>
</footer>
<!-- SCRIPTS -->
<!-- JQuery -->
<script type="text/javascript" src="js/jquery-2.2.3.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="js/tether.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="js/mdb.min.js"></script>
</body>
</html>